<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
 >

   <Button
       android:id="@+id/filterButton"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Précisez vos Goûts"
       android:textColor="#FFF"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="10dp"
       android:fontFamily="sans-serif-black"
       android:textSize="10sp"
   />

   <ScrollView
       android:id="@+id/scrollView"
       android:layout_below="@+id/filterButton"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">


   <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       >
   <TextView
       android:id="@+id/label2"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="40px"
       android:layout_marginTop="20px"
       android:fontFamily="sans-serif-black"
       android:text="Pour Vous"
       android:textColor="#FFF"
       android:textSize="20sp" />

   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/card_recycler"
       android:layout_below="@+id/label2"
       android:layout_width="match_parent"
       android:scrollbars="horizontal"
       android:layout_height="wrap_content"/>

   <TextView
       android:id="@+id/label3"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/card_recycler"
       android:layout_marginLeft="40px"
       android:layout_marginTop="60px"
       android:fontFamily="sans-serif-black"
       android:text="Actions"
       android:textColor="#FFF"
       android:textSize="20sp" />

   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/card_recycler3"
       android:layout_below="@+id/label3"
       android:layout_width="match_parent"
       android:scrollbars="horizontal"
       android:layout_height="wrap_content"/>

   <TextView
       android:id="@+id/label4"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="40px"
       android:layout_marginTop="60px"
       android:layout_below="@+id/card_recycler3"
       android:fontFamily="sans-serif-black"
       android:text="Documentaire"
       android:textColor="#FFF"
       android:textSize="20sp" />

   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/card_recycler4"
       android:layout_below="@+id/label4"
       android:layout_width="match_parent"
       android:scrollbars="horizontal"
       android:layout_height="wrap_content"/>

   <TextView
       android:id="@+id/label5"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="40px"
       android:layout_marginTop="60px"
       android:layout_below="@+id/card_recycler4"
       android:fontFamily="sans-serif-black"
       android:text="Amour"
       android:textColor="#FFF"
       android:textSize="20sp" />

   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/card_recycler5"
       android:layout_below="@+id/label5"
       android:layout_width="match_parent"
       android:scrollbars="horizontal"
       android:layout_height="wrap_content"/>
   </RelativeLayout>
   </ScrollView>

</RelativeLayout>
