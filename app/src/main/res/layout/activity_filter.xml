<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0C0404"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#7229af"
        android:layout_marginLeft="40px"
        android:layout_marginTop="10px"
        android:clickable="true"
        android:text="Retour"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/loginTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backButton"
        android:layout_marginTop="30px"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-black"
        android:text="Filtrer vos Goûts"
        android:textColor="#FFF"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/genreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginTitle"
        android:layout_marginLeft="100px"
        android:layout_marginTop="50px"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-black"
        android:text="Type"
        android:textSize="15sp"
        android:textColor="#FFF"/>

    <Spinner
        android:id="@+id/typeSpinner"
        android:layout_width="900px"
        android:layout_height="100px"
        android:layout_marginLeft="100px"
        android:layout_marginTop="30px"
        android:layout_below="@+id/genreLabel"
        android:background="#FFF"
        android:ems="10"/>


    <TextView
        android:id="@+id/typeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/typeSpinner"
        android:layout_marginLeft="100px"
        android:layout_marginTop="50px"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-black"
        android:text="Genre"
        android:textSize="15sp"
        android:textColor="#FFF"/>

    <Spinner
        android:id="@+id/genreSpinner"
        android:layout_width="900px"
        android:layout_height="100px"
        android:layout_marginLeft="100px"
        android:layout_marginTop="30px"
        android:layout_below="@+id/typeLabel"
        android:background="#FFF"
        android:ems="10"/>


    <TextView
        android:id="@+id/resolutionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/genreSpinner"
        android:layout_marginLeft="100px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px"
        android:fontFamily="sans-serif-black"
        android:text="Résolution"
        android:textSize="15sp"
        android:textColor="#FFF"/>

    <Spinner
        android:id="@+id/resolutionSpinner"
        android:layout_width="900px"
        android:layout_height="100px"
        android:layout_marginLeft="100px"
        android:layout_marginTop="30px"
        android:layout_below="@+id/resolutionLabel"
        android:background="#FFF"
        android:ems="10"/>

    <Button
        android:id="@+id/activateButton"
        android:layout_width="800px"
        android:layout_height="130px"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/resolutionSpinner"
        android:layout_marginTop="70px"
        android:backgroundTint="#7229af"
        android:textColor="#ffffff"
        android:text="Filtrer"/>

    <Button
        android:id="@+id/resetButton"
        android:layout_width="500px"
        android:layout_height="130px"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/activateButton"
        android:layout_marginTop="70px"
        android:backgroundTint="#006400"
        android:textColor="#ffffff"
        android:text="Réinitialiser"/>




</RelativeLayout>


